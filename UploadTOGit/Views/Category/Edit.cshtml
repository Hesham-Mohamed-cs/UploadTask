@model EditCategoryViewModel
@{
    ViewData["Title"] = "Edit Category ";
}

<h1 class="text-center"> Edit  Category  @Model.Name </h1>
<form class="row "  asp-action="Edit" asp-controller="Category">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group col-12 mb-2">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-12 mb-2">
        <label asp-for="parentCategoryId" class="form-label">Parent Category</label>
        <select asp-for="parentCategoryId" asp-items="ViewBag.ParentCategories" class="form-select">
            <option value="">-- Select Parent Category --</option>
        </select>
        <span asp-validation-for="parentCategoryId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary"> Edit Category</button>
        <a asp-action="Index" class="btn btn-secondary"> Cancel  </a>
    </div>
    
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 }

