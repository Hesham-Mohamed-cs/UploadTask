@model IEnumerable<MatrixEC.Models.Entiy.Property>

@{
    ViewData["Title"] = " Property ";
}

<h1 class="text-center"> All property </h1>
<a class="btn btn-success" asp-action="Add"> Create New Property  </a>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Property Name
            </th>
            <th>
                Category 
            </th>
            <th>
                Edit
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Category.Name
                </td>
                
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.Id"> Edit  </a>
                </td>

            </tr>
        }
    </tbody>
</table>
