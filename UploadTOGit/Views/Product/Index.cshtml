@model IEnumerable<MatrixEC.Models.Entiy.Product>

@{
    ViewData["Title"] = " Product Home  ";
}

<h1 class="text-center"> All Product </h1>
<a class="btn btn-success" asp-action="Add"> Create New Product  </a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                Category Name 
            </th>
            <th>
                Edit
            </th>
            <th>
                Fill Propeties
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Category.Name
                </td>

                <td>
                    <a class="btn btn-primary" asp-action = "Edit" asp-route-Id="@item.Id"> Edit  </a>
                </td>
                <td>
                    <a class="btn btn-info" asp-action="FillProperties" asp-route-Id="@item.Id"> Fiil Properties  </a>
                </td>
            </tr>
        }
    </tbody>
</table>
