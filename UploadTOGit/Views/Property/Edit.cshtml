@model EditPrpertyViewModel
@{
    ViewData["Title"] = "Edit Property ";
}

<h1 class="text-center" > Edit Property @Model.Name  </h1>
<form class="row " asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="form-group  col-12 mb-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group  col-12 mb-2">
        <label class="form-label" asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary"> Edit Property </button>
        <a asp-action="Index" class="btn btn-secondary"> Cancel  </a>
    </div>
   
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 }