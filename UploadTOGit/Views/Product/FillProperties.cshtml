@model FillPoductPropertiesGetViewModel
@{
    ViewData["Title"] = "FiilProperties";
}


<p class="text-capitalize text-center"> Product Name @Model.ProductName   </p> 
<p class="text-capitalize text-center"> Category Name @Model.CategoryName   </p>

<form asp-action="FillProperties">
    <input type="hidden" asp-for="ProductId" />

    @for (int i = 0; i < Model?.proertyides.Count; i++)
    {
        <div class="form-group">
            <label>  @Model.propertItesNames[i]  </label>
            <input name="propvalues" class="form-control" />
            <input type="number" name="proertyIds" value="@Model?.proertyides[i]" hidden />
        </div>
    }
    <button type="submit" class="btn btn-primary"> Submit </button>

</form>

