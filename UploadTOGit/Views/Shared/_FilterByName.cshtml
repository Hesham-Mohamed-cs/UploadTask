@model IEnumerable<MatrixEC.Models.Entiy.Product>
@if (ViewBag.Flag)
{
    <div class="container">
        <div class="row">
            
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">  @item.Name </h5>
                            <h5 class="card-title"> Category  @item.Category.Name </h5>
                            <h5 class="card-title">   @item.Price Egyptian Pound  </h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a class="btn btn-success" asp-action="Details" asp-route-Id="@item.Id"> Details </a>
                        </div>
                    </div>
                </div>
            }
        </div>
       
    </div>
}
else
{
    <h1 > no data mateched  </h1>
}
